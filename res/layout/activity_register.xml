<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#7EC0EE">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30sp"
        android:text="用户注册"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:hint="请输入本机的手机号"
            android:layout_toRightOf="@+id/TextView01"
            android:inputType="phone"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Phone"
            android:layout_alignBottom="@+id/Phone"
            android:layout_alignParentLeft="true"
            android:text=" 手机号："
            android:textColor="#FFF"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Phone"
            android:layout_toRightOf="@+id/TextView01"
            android:hint="请填写你的真实姓名"
            android:inputType="text"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user"
            android:layout_alignBottom="@+id/user"
            android:layout_alignParentLeft="true"
            android:text=" 姓名："
            android:textColor="#FFF"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/user"
            android:hint="密码长度为6-15个字符"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_toRightOf="@+id/TextView01"
            android:password="true"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/password"
            android:layout_alignBottom="@+id/password"
            android:layout_alignParentLeft="true"
            android:text=" 密码："
            android:textColor="#FFF"
            android:textSize="23sp" />

        <Button
            android:id="@+id/register"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password"
            android:layout_toRightOf="@+id/TextView01"
            android:text="注册"
            android:textColor="#000"
            android:textSize="26dp" />

    </RelativeLayout>

    

    </LinearLayout>
